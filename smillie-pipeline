##!usr/local/python3

import subprocess
import os
import argparse

#CLUSTER_SUBMIT_STRING = 'qsub -j y -l h_vmem={mem_mb} -l h_rt={runtime} -pe smp {threads} -P broad'

def check_file_exists(filename):
    if not os.path.isfile(filename):
        raise argparse.ArgumentTypeError(f'Invalid file name: {filename}')

    return filename


def get_parser():
    
    parser = argparse.ArgumentParser("""
Command to run metagenomics pipeline. This script wraps a snakemake pipeline, which handles
jobs scheduling and submissions to the cluster. You can modify the behavior of the snakemake pipeline
by passing snakemake arguements following the \"-s\" flag. Useful arguemnts are:

--dryrun: Print out the jobs that would be run without actually running them.
--batch [int]/[int]: Process this fraction of the total jobs.
--resources mem_mb=80000: Set upper limit on resources
--rerun-incomplete: Rerun jobs that failed or were interrupted.
--keep-going: Keep going if a job fails.
\n                                     
    """)

    subparser = parser.add_subparsers(dest='command')

    def add_common_args(parser):
        
        argument_group = parser.add_argument_group('Common arguments')
        argument_group.add_argument('--samples-config', '-samples', type = check_file_exists, required=True,
                        help = 'Specifies the samples and groups of samples to process')
        argument_group.add_argument('--resources-config','-resources', type = check_file_exists, required=True,
                                help = 'Specifies the resources to allocate to each job on cluster submission.')
        argument_group.add_argument('--sequences-config','-sequences', type = check_file_exists, required=True,
                                help = 'Configuration file for sequences and annotations')
        argument_group.add_argument('--local', action = 'store_true', default=False,
                                help = 'Run jobs locally instead of on cluster.')
        argument_group.add_argument('--cores', '-c', type = int, default=1,)
        argument_group.add_argument('--unlock', action='store_true', default=False,
                                help = 'Unlock working directory')
        argument_group.add_argument('--snake-args', '-s', nargs = argparse.REMAINDER, 
                                help = 'Arguments to pass to snakemake')
        argument_group.add_argument('--adapters', '-a', type = check_file_exists, required=True,
                                help = 'Path to illumina adapters fasta file')
    

    buildref_subparser = subparser.add_parser('build-ref', help = 'Download genomes and create indexes for various tools.')
    add_common_args(buildref_subparser)
    buildref_subparser.set_defaults(run = 'build-ref')

    align_subparser = subparser.add_parser('align', help = 'Align reads to reference genome')
    add_common_args(align_subparser)
    align_subparser.set_defaults(run = 'align')

    variants_subparser = subparser.add_parser('variants', help = 'Call variants from aligned reads')
    add_common_args(variants_subparser)
    variants_subparser.set_defaults(run = 'variants')
    
    return parser


if __name__ == "__main__":
    
    args = get_parser().parse_args()

    snakefile = os.path.join(__file__, 'controller.smk')

    command = [
        'snakemake',
        '--profile profile',
        '-s', 'controller.smk',
    ]

    if not args.local:
        cluster_options = {
            'cluster': "cluster/qsub-submit.py",
            'cluster-status': "cluster/qsub-status.py",
            'jobscript': "cluster/qsub-jobscript.sh",
        }

        for k, v in cluster_options.items():
            command.extend([f'--{k}', str(v)])


    if args.unlock:
        command.append('--unlock')

    if not args.snake_args is None:
        command.extend( args.snake_args )

    if args.local:
        command.extend(
            ['--cores', str(args.cores)]
        )

    command.extend([
        '--configfiles', args.samples_config, args.resources_config, args.sequences_config,
        '--config',
    ])
    
    # The following just appends arguments after the config flag
    def add_snake_arg(key, value):
        command.append(f'{key}={value}')

    add_snake_arg('_run_pipeline', args.run)
    
    try:
        add_snake_arg('adapter_fa', args.adapters)
    except AttributeError:
        pass

    print("""
      _________       .__.__  .__  .__      __________.__              .__  .__               
 /   _____/ _____ |__|  | |  | |__| ____\______   \__|_____   ____ |  | |__| ____   ____  
 \_____  \ /     \|  |  | |  | |  |/ __ \|     ___/  \____ \_/ __ \|  | |  |/    \_/ __ \ 
 /        \  Y Y  \  |  |_|  |_|  \  ___/|    |   |  |  |_> >  ___/|  |_|  |   |  \  ___/ 
/_______  /__|_|  /__|____/____/__|\___  >____|   |__|   __/ \___  >____/__|___|  /\___  >
        \/      \/                     \/            |__|        \/             \/     \/ 
    """)
    
    print('\nRunning the following snakemake command:\n' + ' '.join(map(str, command)))

    subprocess.run(
        ' '.join(command), shell = True,
    )
